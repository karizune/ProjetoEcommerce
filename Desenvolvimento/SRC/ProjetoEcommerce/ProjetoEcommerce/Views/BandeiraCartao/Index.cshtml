@model IEnumerable<ProjetoEcommerce.Dominio.Entidades.Pagamento.BandeiraCartao>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
    ViewBag.Title = "Manutenção de Bandeiras de Cartão";
}

<div class="admin-titulo-principal">
    @ViewBag.Title
    <a class="btn btn-success btn-sm float-right" href="@Url.Action("Criar", "BandeiraCartao")">
        <i class="fa fa-plus"></i>
        Incluir
    </a>
</div>

<table class="table table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Descrição</th>
            <th>Criado Em</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == 1)
            {
                <tr>
                    <td>@Html.ActionLink(item.Descricao, "Detalhes", new { id = item.BandeiraCartaoID }, new { @class = "btn btn-link text-dark" })</td>
                    <td>@item.CriadoEm</td>
                    <td>
                        <a href="@Url.Action("Editar", "BandeiraCartao", new { id = item.BandeiraCartaoID })" class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Excluir", "BandeiraCartao", new { id = item.BandeiraCartaoID })" class="btn btn-danger btn-sm">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if(Model.Where(f=>f.Status==0).Count()>0){


    <div class="row">
        <div class="col">
            <div class="collapse" id="TabelaDesativados">
               <table class="table table-hover table-sm">
                   <tbody>
                       @foreach (var item in Model)
                       {
                           if (item.Status == 0)
                           {
                               <tr class=" table-danger">
                                   <td>@Html.ActionLink(item.Descricao, "Detalhes", new { id = item.BandeiraCartaoID }, new { @class = "btn btn-link text-dark" })</td>
                                   <td>@item.CriadoEm</td>
                                   <td>
                                       <a href="@Url.Action("Editar", "BandeiraCartao", new { id = item.BandeiraCartaoID })" class="btn btn-warning btn-sm">
                                           <i class="fa fa-edit"></i>
                                       </a>
                                       <a href="@Url.Action("Excluir", "BandeiraCartao", new { id = item.BandeiraCartaoID })" class="btn btn-success btn-sm">
                                           <i class="fa fa-undo"></i>
                                       </a>
                                   </td>
                               </tr>
                           }
                       }
                   </tbody>
               </table>
            </div>
        </div>
    </div>
    <a class="btn btn-dark" data-toggle="collapse" href="#TabelaDesativados" role="button" aria-expanded="false" aria-controls="TabelaDesativados">
        Mostrar desativados
    </a>
}