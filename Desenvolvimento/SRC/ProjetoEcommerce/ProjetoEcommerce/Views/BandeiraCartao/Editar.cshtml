@model ProjetoEcommerce.Dominio.Entidades.Pagamento.BandeiraCartao

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

@using (Html.BeginForm("Editar", "BandeiraCartao", FormMethod.Post))
{
    @Html.HiddenFor(f => f.BandeiraCartaoID)
    @Html.HiddenFor(f => f.CriadoEm)
    @Html.HiddenFor(f => f.AtualizadoEm)
    @Html.HiddenFor(f => f.Status)
    @Html.HiddenFor(f => f.Usuario)
    <div class="form-group">
        <label for="inputAddress">Descrição</label>
        @Html.TextBoxFor(modelItem => Model.Descricao, new { @class = "form-control", @placeholder = "Digite a Bandeira do cartão" })
    </div>
    <div class="form-group">
        <label for="inputAddress">Ícone Url</label>
        @Html.TextBoxFor(modelItem => Model.IconeUrl, new { @class = "form-control", @placeholder = "Digite o Url de imagem de ícone de bandeira" })
    </div>
    <input type="submit" value="SALVAR" class="btn btn-success btn-block" />
}
