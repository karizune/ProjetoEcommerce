@model ProjetoEcommerce.Dominio.Entidades.Pagamento.Cartao
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
    ViewBag.Title = "Detalhes de Cartão";
}

    <h2>@ViewBag.Title</h2>
    @Html.ActionLink("Voltar","Index",null,new { @class="btn btn-dark",@style="margin:1em 0em 1em 0em" })
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">@Model.CartaoID</th>
            </tr>
            <tr>
                <th scope="row">ID de Bandeira</th>
                <td>@Model.BandeiraCartaoID</td>

            </tr>
            <tr>
                <th scope="row">Nome Do Titular</th>
                <td>@Model.NomeTitular</td>

            </tr>
            <tr>
                <th scope="row">Número</th>
                <td>@Model.Numero</td>

            </tr>
            <tr>
                <th scope="row">Vencimento</th>
                <td>@Model.Vencimento</td>

            </tr>
            <tr>
                <th scope="row">CVC</th>
                <td>@Model.CVC</td>

            </tr>
            <tr>
                <th scope="row">ID de Usuário</th>
                <td>@Model.UsuarioID</td>

            </tr>
            <tr>
                <th scope="row">Criado em</th>
                <td>@Model.CriadoEm</td>

            </tr>
            <tr>
                <th scope="row">Atualizado em</th>
                <td>@Model.AtualizadoEm</td>

            </tr>
            <tr>
                <th scope="row">Usuário</th>
                <td>@Model.Usuario</td>
            </tr>
            <tr>
                <th scope="row">Status</th>
                <td>@Model.Status</td>
            </tr>
        </tbody>
    </table>

