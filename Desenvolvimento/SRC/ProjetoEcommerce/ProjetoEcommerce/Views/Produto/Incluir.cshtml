@model ProjetoEcommerce.Dominio.Entidades.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

@using (Html.BeginForm("IncluirConfirm", "Produto", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ProdutoID)
    @Html.HiddenFor(model => model.CriadoEm)
    @Html.HiddenFor(model => model.Status)
    <div class="form-group">
        <label for="inputAddress">Nome</label>
        @Html.TextBoxFor(modelItem => Model.Nome, new { @class = "form-control", @placeholder = "Digite o nome do Produto" })
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Categoria</label>
        <select class="form-control" id="exampleFormControlSelect1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Imagem</label>
        <select class="form-control" id="exampleFormControlSelect1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <div class="form-group">
        <label for="inputAddress">Preço</label>
        @Html.TextBoxFor(modelItem => Model.Preco, new { @class = "form-control", @placeholder = "Digite o preço" })
    </div>
    <input type="submit" value="SALVAR" class="btn btn-success btn-block" />
}
