@model ProjetoEcommerce.Dominio.Entidades.Relatorio.Relatorio

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

<!DOCTYPE html>

@using (Html.BeginForm("IncluirConfirm", "Relatorio", FormMethod.Post))
{
    <div style="color: blue; border: 2px dotted black; padding: 45px">

        <div class="form-group">
            <label for="inputAddress">Nome</label>
            @Html.TextBoxFor(modelItem => Model.Nome, new { @class = "form-control", @placeholder = "Insira seu nome bro" })
        </div>
        <div class="form-group">
            <label for="inputAddress">Descrição</label>
            @Html.DropDownListFor(model => model.RelatorioID, new SelectList(ViewBag.TipoCampos, "RelatorioID", "Descricao"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="inputAddress">Relatorio ID</label>
            @Html.DropDownListFor(model => model.RelatorioID, new SelectList(ViewBag.TipoCampos, "RelatorioID", "RelatorioID"), new { @class = "form-control" })
        </div>

        </div>
        <br />
        <br />
        <input type="submit" value="SALVAR" class="btn btn-success btn-block" />
    }
</body>
</html>
