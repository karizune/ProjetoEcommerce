@using ProjetoEcommerce.Dominio.Entidades.Relatorio
@model System.Collections.Generic.List<Campo>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListarTodos</title>
</head>
<body>
    <div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Usuario</th>
                    <th>Status</th>
                    <th>Criado em</th>
                    <th>Atualizado em</th>
                    <th>Tipo Campo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CampoID</td>
                    <td>@item.Nome</td>
                    <td>@item.Usuario</td>
                    <td>@item.Status</td>
                    <td>@item.CriadoEm</td>
                    <td>@item.AtualizadoEm</td>
                    <td>@item.TipoCampoID</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>