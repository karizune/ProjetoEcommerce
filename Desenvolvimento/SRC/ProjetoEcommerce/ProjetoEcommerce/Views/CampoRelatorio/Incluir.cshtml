@model ProjetoEcommerce.Dominio.Entidades.Relatorio.CampoRelatorio

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Incluir</title>
</head>
<body>
    @using (Html.BeginForm("IncluirConfirm", "CampoRelatorio", FormMethod.Post))
    {
    <div style="border: 2px dotted black; padding: 45px">

        <div>
            Relatório ID:
            @Html.DropDownListFor(model => model.RelatorioID, new SelectList(ViewBag.Relatorios, "RelatorioID", "Nome"))            
        </div>

        <div>
            Campo ID:
            @Html.DropDownListFor(model => model.CampoID, new SelectList(ViewBag.Campos, "CampoID", "Nome"))
        </div>

    </div>
        <br />
        <br />
        <input type="submit" value="Confirmar" />
    }
</body>
</html>
