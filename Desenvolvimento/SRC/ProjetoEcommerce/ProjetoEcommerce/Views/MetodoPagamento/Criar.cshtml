@model ProjetoEcommerce.Dominio.Entidades.Pagamento.MetodoPagamento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

@using (Html.BeginForm("Criar", "MetodoPagamento", FormMethod.Post))
{

    <div class="form-group">
        <label for="inputAddress">Descrição</label>
        @Html.TextBoxFor(modelItem => Model.Descricao, new { @class = "form-control", @placeholder = "Digite a descrição do método de pagamento" })

    </div>
    <div class="form-group">
        <label for="inputAddress">Ícone do FontAwesome</label>
        @Html.TextBoxFor(modelItem => Model.FA, new { @class = "form-control", @placeholder = "fa fa-icone-exemplo" })

    </div>
    <div class="form-group">
        <label for="inputAddress">Action do controlador de pagamento</label>
        @Html.TextBoxFor(modelItem => Model.Action, new { @class = "form-control", @placeholder = "Action" })

    </div>
    <input type="submit" value="SALVAR" class="btn btn-success btn-block" />
}
