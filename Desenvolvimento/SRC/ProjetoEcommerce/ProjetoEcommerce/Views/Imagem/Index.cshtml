@model System.Collections.Generic.IEnumerable<ProjetoEcommerce.Dominio.Entidades.Imagem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
    ViewBag.Title = "Manutenção de Imagens";
}

<div class="admin-titulo-principal">
    @ViewBag.Title
    <a class="btn btn-success btn-sm float-right" href="@Url.Action("Incluir", "Imagem")">
        <i class="fa fa-plus"></i>
        INCLUIR
    </a>
</div>


<table class="table table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Criado Em</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.CriadoEm</td>
                <td>
                    <a href="@Url.Action("Incluir", "Imagem", new { id = item.ImagemID})" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Excluir", "Imagem", new { id = item.ImagemID })" class="btn btn-danger btn-sm">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
