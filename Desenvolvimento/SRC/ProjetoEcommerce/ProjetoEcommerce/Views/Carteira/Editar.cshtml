@model ProjetoEcommerce.Dominio.Entidades.Pagamento.Carteira

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

@using (Html.BeginForm("Editar", "Carteira", FormMethod.Post))
{
    @Html.HiddenFor(f => f.CarteiraID)
    @Html.HiddenFor(f => f.CriadoEm)
    @Html.HiddenFor(f => f.AtualizadoEm)
    @Html.HiddenFor(f => f.Status)
    @Html.HiddenFor(f => f.Usuario)
    <div class="form-group">
        <label for="inputAddress">ID de usuário</label>
        @Html.TextBoxFor(modelItem => Model.UsuarioID, new { @class = "form-control", @placeholder = "Digite o ID de Usuário da carteira" })
    </div>
    <div class="form-group">
        <label for="inputAddress">Descrição</label>
        @Html.TextBoxFor(modelItem => Model.Saldo, new { @class = "form-control", @placeholder = "Digite o saldo da carteira" })
    </div>
    <input type="submit" value="SALVAR" class="btn btn-success btn-block" />
}