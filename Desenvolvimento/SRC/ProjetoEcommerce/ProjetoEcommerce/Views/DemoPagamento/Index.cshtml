                <td><a href="@Url.Action("Index","Cartao_Tipo",null)">Cartao_Tipo</a></td>
            </tr>
            <tr>
                <td><a href="@Url.Action("Index","BandeiraCartao",null)">BandeiraCartao</a></td>
                <td><a href="@Url.Action("Index","Boleto",null)">Boleto</a></td>
                <td><a href="@Url.Action("Index","Cartao",null)">Cartao</a></td>

            </tr>
            <tr>
                <td><a href="@Url.Action("Index","Carteira",null)">Carteira</a></td>
                <td><a href="@Url.Action("Index","Pagamento",null)">Pagamento</a></td>
                <td><a href="@Url.Action("Index","TipoCartao",null)">TipoCartao</a></td>
            </tr>
        </tbody>
    </table>
</div>
