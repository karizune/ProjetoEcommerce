

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce SIF - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (ViewBag.ShowMenu == true)
    {
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            <h5 class="my-0 mr-md-auto font-weight-normal">Comprei</h5>
            <nav class="my-2 my-md-0 mr-md-3">
                <a class="p-2 text-dark" href="/">Início</a>
                <a class="p-2 text-dark" href="@Url.Action("Index", "Produto")">Produtos</a>
                <a class="p-2 text-dark" href="@Url.Action("Sair", "Autenticacao")">Sair</a>
            </nav>
            <a class="btn btn-outline-primary" href="@Url.Action("Entrar", "Autenticacao")">
                <i class="fa fa-user"></i>
                Entrar
            </a>
        </div>
    }

    <div class="container body-content">
        @RenderBody()

        <footer class="text-center fixed-bottom">
            <hr />
            <p>&copy; @DateTime.Now.Year - E-commerce - SIF</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
