<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background:#8137af; min-height:77px; border:none">
        <div class="container" style="margin-top:14px">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Projeto Ecommerce", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white; " })
            </div>
            <div class="navbar-collapse collapse" style="float:right;">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home", new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { @style = "color:white;" })</li>*@
                    <li>
                        <button class="btn btn-default" type="button" style="margin-top:5px;">
                            @Html.ActionLink("CARRINHO", "Index", "Carrinho", new { @style = "color:black;" }) <span class="badge">4</span>
                        </button>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ProjetoEcommerce</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://kit.fontawesome.com/74171085ee.js" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
