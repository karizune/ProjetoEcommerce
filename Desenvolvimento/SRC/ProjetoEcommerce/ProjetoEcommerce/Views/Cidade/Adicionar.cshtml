@model ProjetoEcommerce.Dominio.Entidades.Entrega.Cidade

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

<br />

<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
    <div class="mx-auto" style="width: 200px;">
        CADASTRO DE CIDADE
    </div>
</nav>


@using (Html.BeginForm())
{

    <form>
        <br />
        <div class="form-group">
            <label for="exempleInputText">Nome</label>
            <input type="text" class="form-control" id="exempleInputText" placeholder="Nome">
        </div>
        <div class="form-group">
            <label for="exempleInputText">Estado</label>
            <input type="text" class="form-control" id="exempleInputText" placeholder="Estado">
        </div>        
        <div class="form-group">
            <label for="exempleInputText">Status</label>
            <input type="text" class="form-control" id="exempleInputText" placeholder="Status">
        </div>
        <div class="form-group">
            <label for="exempleInputText">Usuario</label>
            <input type="text" class="form-control" id="exempleInputText" placeholder="Usuario">
        </div>

        <button type="submit" class="btn btn-primary">Confirmar</button>


    </form>
}


<div>
    @Html.ActionLink("Voltar ao menu", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
