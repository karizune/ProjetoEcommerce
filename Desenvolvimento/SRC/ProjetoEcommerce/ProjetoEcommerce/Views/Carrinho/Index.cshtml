@model  int 

@{
    ViewBag.Title = "teste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <style>

        .produto-td, .produto-th {
            padding: 0 1em;
        }

        .form-control {
            display: initial;
        }
    </style>
    <div style="display: flex; margin: 4em 0">
        <div style=" width: 55%;padding: 50px;">
            <div style="background:#fff;" id="produtos-carrinho" data-url="@Url.Action("ProdutoCarrinho","Produto")">

            </div>
        </div>

        <div style=" width: 55%;padding: 50px;">
            <div style="border:1px solid; background:#f5f5f5;" id="resumo-carrinho" data-url="@Url.Action("ResumoCarrinho","Carrinho")">
                
            </div>
        </div>
    </div>

    @*JS Scripts*@

    <script>


        var urlProdutos = $("#produtos-carrinho").data("url");
        $.ajax({
            type: "GET",
            url: urlProdutos,
            success: function (result) {
                $("#produtos-carrinho").html(result);
            },
            error: function () {
                alert('errro hahaanjkhbkjhnjiuk');
            }
        });
        var usuarioId = 1;
        var urlResumo = $("#resumo-carrinho").data("url") + `?usuarioid=${usuarioId}`;
        $.ajax({
            type: "GET",
            url: urlResumo,
            success: function (result) {
                $("#resumo-carrinho").html(result);
                ALERT('oh heyt');
            },
            error: function () {
                alert('errro hahaa');
            }
        });

        $(function(){

            $('.btn-Remover').on('click', function (e) {

                const $self = $(this);
                let carrinhoProdutoId = $self.data("vitor");
                const url = '@Url.Action("Remover", "Carrinho")' + '?CarrinhoProdutoID=' + carrinhoProdutoId;

                fetch(url)
                    .then((response) => { console.log(response); return response.json(); })
                    .then((result) => {
                        console.log(result);
                        if (result.status === 1) {
                            //window.location.href = window.location.href;
                            $self.parent().parent().parent().remove()
                        }
                        else {
                            alert(result.message);
                        }
                    })

            });
        });
    </script>

</body>
</html>
