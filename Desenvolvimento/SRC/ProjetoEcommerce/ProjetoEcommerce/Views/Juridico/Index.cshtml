@model IEnumerable<ProjetoEcommerce.ViewModels.JuridicoViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
    ViewBag.Title = "Clientes Juridicos";
}

<div class="admin-titulo-principal">
    @ViewBag.Title
    <a class="btn btn-success btn-sm float-right" href="@Url.Action("Create", "Juridico")">
        <i class="fa fa-plus"></i>
        INCLUIR
    </a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InscricaoEstatual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Responsavel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <img src="~/Content/img/@item.Foto" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InscricaoEstatual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsavel)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Juridico", new { id =item.ClienteId })" class="btn btn-warning btn-sm" title="Editar">
                    <i class="fa fa-pencil-square-o"></i>
                </a>
                <a href="@Url.Action("Details", "Jurido", new { id=item.ClienteId })" class="btn btn-info btn-sm" title="Detalhes">
                    <i class="fa fa-info-circle"></i>
                </a>
                <a href="@Url.Action("Delete", "Juridico", new { id = item.ClienteId })" class="btn btn-danger btn-sm" title="Desativar">
                    <i class="fa fa-remove"></i>
            </td>
        </tr>
    }

</table>
