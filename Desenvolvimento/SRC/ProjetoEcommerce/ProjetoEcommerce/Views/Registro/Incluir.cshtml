@model ProjetoEcommerce.Dominio.Entidades.Relatorio.Registro

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Incluir</title>
</head>
<body>
    @using (Html.BeginForm("IncluirConfirm", "Registro", FormMethod.Post))
    {
    <div style="border: 2px dotted black; padding: 45px">

        <div>       
            Nome:
            @Html.TextBoxFor(modelItem => Model.Nome)
        </div>

        <div>
            Descrição:
            @Html.TextBoxFor(modelItem => Model.Descricao)
        </div>
        <div>
            Relatorio ID:
            @Html.DropDownListFor(model => model.RelatorioID, new SelectList(ViewBag.Relatorios, "RelatorioID", "Nome"))
        </div>
        <div>
            Usuario ID:
            @Html.DropDownListFor(model => model.UsuarioID, new SelectList(ViewBag.Usuarios, "UsuarioID", "NomeUsuario"))
        </div>

    </div>
        <br />
        <br />
        <input type="submit" value="Confirmar" />
    }
</body>
</html>
