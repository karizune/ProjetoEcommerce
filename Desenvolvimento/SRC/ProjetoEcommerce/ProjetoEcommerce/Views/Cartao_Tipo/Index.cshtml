@model IEnumerable<ProjetoEcommerce.Dominio.Entidades.Pagamento.Cartao_Tipo>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
    ViewBag.Title = "Manutenção de Cartão/Tipo";
    bool Desativados = Model.Where(f => f.Status == 0).Count() > 0;
}

<div class="admin-titulo-principal">
    @ViewBag.Title
    <a class="btn btn-success btn-sm float-right" href="@Url.Action("Criar", "Cartao_Tipo")">
        <i class="fa fa-plus"></i>
        Criar
    </a>
    @if (Desativados)
    {

        <a class="btn btn-dark btn-sm float-right" style="margin-right:0.5em;" data-toggle="collapse" href="#TabelaDesativados" role="button" aria-expanded="false" aria-controls="TabelaDesativados">
            <i class="fa fa-eye"></i>
            Mostrar desativados
        </a>
    }
</div>

<table class="table table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th>ID Cartão</th>

            <th>ID Tipo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == 1)
            {
                <tr>
                    <td>@Html.ActionLink(item.CartaoID.ToString(), "Detalhes", new { CartaoID = item.CartaoID, TipoCartaoID = item.TipoCartaoID }, new { @class = "btn btn-link text-dark" })</td>
                    <td>@Html.ActionLink(item.TipoCartaoID.ToString(), "Detalhes", new { CartaoID = item.CartaoID, TipoCartaoID = item.TipoCartaoID }, new { @class = "btn btn-link text-dark" })</td>

                    <td>
                        <a href="@Url.Action("Excluir", "Cartao_Tipo", new { CartaoID = item.CartaoID, TipoCartaoID=item.TipoCartaoID })" class="btn btn-danger btn-sm">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Desativados)
{


    <div class="row">
        <div class="col">
            <div class="collapse" id="TabelaDesativados">
                <table class="table table-hover table-sm">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == 0)
                            {
                                <tr class=" table-danger">
                                    <td>@Html.ActionLink(item.CartaoID.ToString(), "Detalhes", new { CartaoID = item.CartaoID, TipoCartaoID = item.TipoCartaoID }, new { @class = "btn btn-link text-dark" })</td>
                                    <td>@Html.ActionLink(item.TipoCartaoID.ToString(), "Detalhes", new { CartaoID = item.CartaoID, TipoCartaoID = item.TipoCartaoID }, new { @class = "btn btn-link text-dark" })</td>

                                    <td>
                                        <a href="@Url.Action("Excluir", "Cartao_Tipo", new { CartaoID = item.CartaoID, TipoCartaoID=item.TipoCartaoID })" class="btn btn-success btn-sm">
                                            <i class="fa fa-undo"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}
