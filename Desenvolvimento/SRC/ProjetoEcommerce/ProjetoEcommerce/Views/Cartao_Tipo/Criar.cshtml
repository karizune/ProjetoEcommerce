@model ProjetoEcommerce.Dominio.Entidades.Pagamento.Cartao_Tipo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
}

@using (Html.BeginForm("Criar", "Cartao_Tipo", FormMethod.Post))
{
    <div class="form-group">
        <label for="inputAddress">ID do cartão</label>
        @Html.TextBoxFor(modelItem => Model.CartaoID, new { @class = "form-control", @placeholder = "Digite o ID do cartão" })

    </div>
    <div class="form-group">
        <label for="inputAddress">ID de Tipo</label>
        @Html.TextBoxFor(modelItem => Model.TipoCartaoID, new { @class = "form-control", @placeholder = "Digite o ID do tipo do cartão" })

    </div>
    <input type="submit" value="SALVAR" class="btn btn-success btn-block" />
}
