@model IEnumerable<ProjetoEcommerce.ViewModels.SexoViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
    ViewBag.Title = "Manutenção de Gênero";
}

<div class="admin-titulo-principal">
    @ViewBag.Title
    <a class="btn btn-success btn-sm float-right" href="@Url.Action("Create", "Sexo")">
        <i class="fa fa-plus"></i>
        INCLUIR
    </a>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IDSexo }) |
                @Html.ActionLink("Details", "Details", new { id=item.IDSexo }) |
                <a href="@Url.Action("Delete", "Sexo", new { id = item.IDSexo })" class="btn btn-danger btn-sm">
                    <i class="fa fa-remove"></i>
                </a>
            </td>
        </tr>
    }

</table>
