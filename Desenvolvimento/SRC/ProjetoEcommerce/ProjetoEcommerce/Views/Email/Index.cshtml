@model IEnumerable<ProjetoEcommerce.ViewModels.EmailViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowMenu = true;
    ViewBag.Title = "Email";
}

<div class="admin-titulo-principal">
    @ViewBag.Title
    <a class="btn btn-success btn-sm float-right" href="@Url.Action("Create", "Juridico")">
        <i class="fa fa-plus"></i>
        INCLUIR
    </a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.E_mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.E_mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDEmail }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDEmail }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDEmail })
            </td>
        </tr>
    }

</table>
